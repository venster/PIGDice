<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    tools:context=".MainActivity"
    android:background="@color/player_2bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:background="@color/button_text">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textSize="25sp"
            android:id="@+id/player"
            android:layout_weight=".3"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="P1: "
            android:textSize="20sp"
            android:id="@+id/p1"
            android:layout_weight=".1"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"

            android:text="0"
            android:textSize="20sp"
            android:id="@+id/p1score"
            android:layout_weight=".25"
            />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="P2:"
            android:textSize="20sp"
            android:id="@+id/p2"
            android:layout_weight=".1"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:id="@+id/p2score"
            android:layout_weight=".25"/>




    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".7"
        >
        <!-- The placeholder for actual die-->
        <FrameLayout
            android:id="@+id/die1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:background="@drawable/die_face_1"/>

        <!-- The placeholder for actual die2-->
        <FrameLayout
            android:id="@+id/die2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/die_face_1"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/die1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">
            >

            <TextView
                android:id="@+id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:text="Round:"
                android:textColor="@color/button_text"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/RoundNum"
                android:layout_toRightOf="@id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:text="0"
                android:textColor="@color/button_text"
                android:textSize="30sp" />
            <Button
                android:id="@+id/hold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/RoundNum"
                android:background="@drawable/large_button"
                android:text="Hold"
                android:textColor="@color/button_text"
                android:textSize="20sp"/>



        </RelativeLayout>


    </RelativeLayout>

    <!-- SP Depends on the textsize of the user-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".3"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/Roll"
            android:id="@+id/button"
            android:textSize="30sp"
            android:background="@drawable/large_button"
            android:textColor="@color/button_text"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</LinearLayout>
